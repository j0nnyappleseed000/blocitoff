<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="pull-right user-info">
    <div class="container">
      <ul class="nav nav-tabs">
        <% if current_user %>
             Hello <%= current_user.email %>! <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
           <% else %>
            <li id="application-nav"><%=  link_to "Home", home_index_path %></li>
            <li id="application-nav"><%=  link_to "Sign Up", new_user_registration_path %></li>
            <li id="application-nav"><%=  link_to "Sign In", new_user_session_path %></li>
         <% end %>
      </ul>
    </div>
  <%= yield %>
  </div>

</body>
</html>
